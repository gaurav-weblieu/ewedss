<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- In CollapsingToolbarLayout sompe important attributes are:
            i) app:layout_scrollFlags which is used to specify how collapsing
                layout behaves when content is scrolled.I have used
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                so it will scroll until it's is completely collapsed.
            ii) app:contentScrim="@color/green" that specifies the color
                of the collapsed toolbar -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@android:color/white"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagetwo"
                    app:layout_collapseMode="parallax" />


                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="6"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/line_city"
                            android:onClick="city"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delhi NCR"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/catamaran_semibold"
                                android:textColor="@android:color/holo_red_light"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_service"
                                android:layout_width="35dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0E0E0"
                                android:layout_height="35dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/service_provider"
                                    />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_business_list"
                                android:layout_width="35dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0E0E0"
                                android:layout_height="35dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/free_list_business"
                                    />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_profile"
                                android:layout_width="35dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0E0E0"
                                android:layout_height="35dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_round_person_24"
                                    />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!--Now add the NestedScollView-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:background="#EEEEEE"
                            android:id="@+id/recycleView_category"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#EEEEEE"
                            >


                            <LinearLayout
                                android:id="@+id/line_van"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#EEEEEE"
                                android:layout_margin="10dp"
                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@android:color/holo_red_light"
                                    android:layout_height="70dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="+18"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="21dp"
                                        />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textView_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/catamaran_semibold"
                                    android:text="All Categories"
                                    android:textColor="@android:color/holo_red_light"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Wedding Plan"
                    android:lineSpacingExtra="8sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/catamaran_semibold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_pre_wedding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Vendors For Bride"
                    android:lineSpacingExtra="8sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/catamaran_semibold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_vender_bride"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Vendors For Groom"
                    android:fontFamily="@font/catamaran_semibold"
                    android:lineSpacingExtra="8sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_vender_groom"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bannner"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Popular Features"
                    android:fontFamily="@font/catamaran_semibold"
                    android:lineSpacingExtra="8sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_popular_features"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Our Tips"
                    android:fontFamily="@font/catamaran_semibold"
                    android:lineSpacingExtra="8sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_our_tips"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="70dp"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>